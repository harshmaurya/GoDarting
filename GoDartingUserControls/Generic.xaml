<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    >

            <Style x:Key="backgroundColor" TargetType="Grid">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush>
                    <GradientStop Color="#10999E" Offset="0.3"/>
                    <GradientStop Color="#530686" Offset="0.9"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>

    <ControlTemplate TargetType="Button" x:Key="ObamaButton">
        <Grid>
            <Image Source="Images/obama.png" HorizontalAlignment="Left"/>
            <ContentPresenter HorizontalAlignment="Center"
                              VerticalAlignment="Center"
